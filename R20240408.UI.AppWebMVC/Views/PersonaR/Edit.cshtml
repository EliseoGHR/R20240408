@model R20240408.EntidadesDeNegocio.PersonaR

@{
    ViewData["Title"] = "Editar";
}

<div class="row" style="margin-top:70px;">
    <div class="row">
        <form asp-action="Edit" class="card">
            <div class="card-header row">
                <h1 class="card-text col-md-12">Editar persona</h1>
            </div>
            <div class="card-body row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" type="hidden" class="form-control" />

                <div class="form-group col-md-4">
                <label asp-for="NombreR" class="control-label"></label>
                <input asp-for="NombreR" class="form-control" />
                <span asp-validation-for="NombreR" class="text-danger"></span>
            </div>
                <div class="form-group col-md-4">
                <label asp-for="ApellidoR" class="control-label"></label>
                <input asp-for="ApellidoR" class="form-control" />
                <span asp-validation-for="ApellidoR" class="text-danger"></span>
            </div>
                <div class="form-group col-md-4">
                <label asp-for="FechaNacimientoR" class="control-label"></label>
                <input asp-for="FechaNacimientoR" class="form-control" />
                <span asp-validation-for="FechaNacimientoR" class="text-danger"></span>
            </div>
                <div class="form-group col-md-4">
                <label asp-for="SueldoR" class="control-label"></label>
                <input asp-for="SueldoR" class="form-control" />
                <span asp-validation-for="SueldoR" class="text-danger"></span>
            </div>
                <div class="form-group col-md-3">
                <label asp-for="EstatusR" class="control-label"></label>
                    <select asp-for="EstatusR" class="form-control">
                        <option value="1">Activo</option>
                        <option value="2">Inactivo</option>
                    </select>
                <span asp-validation-for="EstatusR" class="text-danger"></span>
            </div>
                <div class="form-group col-md-4">
                <label asp-for="ComentarioR" class="control-label"></label>
                <textarea asp-for="ComentarioR" class="form-control" ></textarea>
                <span asp-validation-for="ComentarioR" class="text-danger"></span>
            </div>
           

            <div class="form-group col-md-6" style="margin-top:10px;">
                    <input type="submit" value="Guardar" class="btn btn-primary" style="width:100%;" />
                </div>
                <div class="col-md-6" style="margin-top:10px;">
                    <a class="btn btn-secondary" style="width:100%;" asp-action="Index">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
