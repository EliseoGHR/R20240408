@model R20240408.EntidadesDeNegocio.PersonaR

@{
    ViewData["Title"] = "Detalle";
}

<div class="row" style="margin-top:70px;">
    <div class="card">
        <div class="card-header row">
            <h1 class="col-md-12">Detalles de persona</h1>
        </div>
        <div class="card-body row">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NombreR)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NombreR)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ApellidoR)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ApellidoR)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaNacimientoR)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaNacimientoR)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SueldoR)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SueldoR)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EstatusR)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EstatusR)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ComentarioR)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ComentarioR)
                </dd>
            </dl>
            <div class="col-md-6">
                @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-success", style = "width:100%;" })
            </div>
            <div class="col-md-6">
                <a class="btn btn-secondary" style="width:100%;" asp-action="Index">Cancelar</a>
            </div>
        </div>
    </div>
</div>
