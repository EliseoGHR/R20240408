@model IEnumerable<R20240408.EntidadesDeNegocio.PersonaR>

@{
    ViewData["Title"] = "Persona";
}

<div class="row">
    <div class="card">
        <div class="card-header row">
            <h1 class="card-text col-md-12">Persona</h1>
        </div>

        <div class="card-body row">
            <form asp-action="Index">

                <div class="row">
                    <div class="form-group col-4">
                        <label class="control-label">Nombre</label>
                        <input type="text" name="NombreR" class="form-control" />
                    </div>
                    <div class="form-group col-5">
                        <label class="control-label">Apellido</label>
                        <input type="text" name="ApellidoR" class="form-control" />
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label">Cantidad Reg.</label>
                        <select name="Take" class="form-control">
                            <option value="2">2</option>
                            <option selected value="10">10</option>
                            <option value="20">20</option>
                        </select>
                    </div>

                    <div class="form-group col-4" style="margin-top:10px;">
                        <input type="submit" value="Buscar" style="width:100%;" class="btn btn-primary" />
                    </div>

                </div>

            </form>
        </div>


        <div class="card-body row ">
            <p class="col-md-12">
                <a class="btn btn-success" style="width:100%;" asp-action="Create">Registrar</a>
            </p>

            <div class="table-responsive col-md-12">
                <table class="table table-striped table-hover table-secondary">
                    <thead>
                        <tr>
                           
                            <th>
                                @Html.DisplayNameFor(model => model.NombreR)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ApellidoR)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaNacimientoR)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SueldoR)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EstatusR)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ComentarioR)
                            </th>
                           
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                               
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreR)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ApellidoR)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaNacimientoR)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SueldoR)
                                </td>
                                <td>
                                    @if (item.EstatusR == 1)
                                    {
                                        <span>Activo</span>
                                    }
                                    else
                                    {
                                        <span>Inactivo</span>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ComentarioR)
                                </td>
                             
                                <td>
                                    <table>
                                        <td>
                                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })

                                        </td>
                                        <td>
                                            @Html.ActionLink("Detalle", "Details", new { id = item.Id }, new { @class = "btn btn-info" })

                                        </td>
                                        <td>
                                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })

                                        </td>
                                    </table>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
