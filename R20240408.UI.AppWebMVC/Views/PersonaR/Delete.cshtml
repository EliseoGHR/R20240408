@model R20240408.EntidadesDeNegocio.PersonaR

@{
    ViewData["Title"] = "Eliminar";
}

<div class="row" style="margin-top:70px;">
    <div class="card">
        <div class="card-header row">
            <h1 class="card-text">Eliminar persona</h1>
        </div>
        <div class="card-body row">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NombreR)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NombreR)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ApellidoR)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ApellidoR)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaNacimientoR)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaNacimientoR)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SueldoR)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SueldoR)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EstatusR)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EstatusR)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ComentarioR)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ComentarioR)
                </dd>
            </dl>
            <form asp-action="Delete" class="col-md-12 row">
                <input type="hidden" asp-for="Id" />
                <div class="col-md-6" style="margin-top:10px;">
                    <input style="width:100%;" type="submit" value="Eliminar" class="btn btn-danger" />
                </div>
                <div class="col-md-6" style="margin-top:10px;">
                    <a style="width:100%;" class="btn btn-secondary" asp-action="Index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

</div>